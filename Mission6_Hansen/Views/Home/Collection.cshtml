@model Movie
@{
    ViewData["Title"] = "Movie Collection";
}

<h1>Joel Hilton Movie Collection</h1>
<br />

<!--form for inputting movies into database-->
<form method="post">
    <label asp-for="Category">Category</label>
    <input asp-for="Category" required/>

    <br />
    <br />

    <label asp-for="Title">Title</label>
    <input asp-for="Title" required />

    <br />
    <br />

    <label asp-for="Title">Year</label>
    <input asp-for="Year" required />

    <br />
    <br />

    <label asp-for="Director">Director</label>
    <input asp-for="Director" required />

    <br />
    <br />

    <label asp-for="Rating">Rating</label>
    <select asp-for="Rating" required>
        <option value ='G'>G</option>
        <option value='PG'>PG</option>
        <option value='PG-13'>PG-13</option>
        <option value='R'>R</option>
    </select>

    <br />
    <br />

    <label asp-for="Edit">Video Edited?</label>
    <select asp-for="Edit">
        <option value='yes'>Yes</option>
        <option value='no'>No</option>
    </select>

    <br />
    <br />

    <label asp-for="Lent">Lent to</label>
    <input asp-for="Lent" />

    <br />
    <br />

    <label asp-for="Notes">Notes</label>
    <input asp-for="Notes" maxlength="25" />

    <br />
    <br />

    <button type="submit">Add Movie to Collection</button>

</form>